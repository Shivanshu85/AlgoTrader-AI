# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_DB=stock_prediction
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_dev_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Airflow Database
AIRFLOW_DB=airflow
AIRFLOW_DB_USER=airflow
AIRFLOW_DB_PASSWORD=airflow_dev_password

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password
REDIS_DB=0

# ============================================================================
# API KEYS & SECRETS
# ============================================================================
# Alpha Vantage API Key (https://www.alphavantage.co/)
ALPHA_VANTAGE_API_KEY=your_key_here

# IEX Cloud API Key (https://iexcloud.io/)
IEX_CLOUD_API_KEY=your_key_here
IEX_ENDPOINT=https://cloud.iexapis.com

# FMP API Key (https://financialmodelingprep.com/)
FMP_API_KEY=your_key_here

# ============================================================================
# MLFLOW CONFIGURATION
# ============================================================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_BACKEND_STORE_URI=postgresql://postgres:postgres_dev_password@localhost:5432/stock_prediction_mlflow
MLFLOW_DEFAULT_ARTIFACT_ROOT=./mlruns

# ============================================================================
# AIRFLOW CONFIGURATION
# ============================================================================
AIRFLOW_HOME=./airflow
AIRFLOW__CORE__DAGS_FOLDER=./airflow/dags
AIRFLOW__CORE__PLUGINS_FOLDER=./airflow/plugins
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__EXPOSE_CONFIG=True

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# FEATURE STORE CONFIGURATION
# ============================================================================
FEATURE_STORE_TYPE=feast
FEATURE_STORE_REGISTRY_PATH=./feature_store/

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================
MODEL_TYPE=lstm_attention
LOOKBACK_WINDOW=60
FORECAST_HORIZON=1
BATCH_SIZE=32
LEARNING_RATE=0.001

# ============================================================================
# DATA INGESTION CONFIGURATION
# ============================================================================
DATA_INGESTION_BATCH_SIZE=100
DATA_INGESTION_RETRY_ATTEMPTS=3
DATA_INGESTION_RETRY_DELAY=5

# ============================================================================
# MONITORING & ALERTING
# ============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=admin
ALERT_EMAIL_RECIPIENTS=team@example.com

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-change-in-production

# ============================================================================
# SECURITY
# ============================================================================
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_ADVANCED_FEATURES=true
ENABLE_EXPERIMENTAL_MODELS=false
